<h1><%= title %></h1>

<!-- Flash Message Display -->
<% if (errors && errors.length > 0) { %>
  <ul class="flash-message">
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<!-- Flash Notice Messages -->
<% if (typeof notice !== 'undefined' && notice.length > 0) { %>
  <ul class="flash-message notice">
    <% notice.forEach(msg => { %>
      <li><%= msg %></li>
    <% }) %>
  </ul>
<% } %>


<!-- Login Form -->
<form id="loginForm" action="/account/login" method="post" novalidate>
  <label for="account_email">Email</label>
  <input
    type="email"
    id="account_email"
    name="account_email"
    required
    value="<%= typeof account_email !== 'undefined' ? account_email : '' %>"
  >

  <label for="account_password">Password</label>
  <span id="passwordHelp" class="password-rules">
    Must be at least 12 characters and include a capital letter, a number, and a special character.
  </span>
  <input
    type="password"
    id="account_password"
    name="account_password"
    required
    pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
    aria-describedby="passwordHelp"
  >

  <button type="submit" class="submit-btn">Login</button>
</form>

<p>Don't have an account? <a href="/account/register">Register</a></p>
