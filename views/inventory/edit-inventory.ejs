<main>
  <% if (typeof title !== 'undefined' && title) { %>
    <h1><%= title %></h1>
  <% } %>

  <!-- Flash Errors -->
  <% if (Array.isArray(errors) && errors.length > 0) { %>
    <ul class="notice">
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <!-- Flash Messages -->
  <% if (Array.isArray(message) && message.length > 0) { %>
    <div class="flash-message">
      <% message.forEach(msg => { %>
        <p><%= msg %></p>
      <% }) %>
    </div>
  <% } %>

  <form action="/inv/update" method="post" class="inv-form">
    <!-- Classification Dropdown -->
    <label for="classification_id">Classification</label>
    <%- typeof classificationSelect !== 'undefined' ? classificationSelect : '' %>

    <!-- Make -->
    <label for="inv_make">Make</label>
    <input
      type="text"
      id="inv_make"
      name="inv_make"
      required
      value="<%= vehicle && vehicle.inv_make ? vehicle.inv_make : '' %>"
    />

    <!-- Model -->
    <label for="inv_model">Model</label>
    <input
      type="text"
      id="inv_model"
      name="inv_model"
      required
      value="<%= vehicle && vehicle.inv_model ? vehicle.inv_model : '' %>"
    />

    <!-- Description -->
    <label for="inv_description">Description</label>
    <textarea id="inv_description" name="inv_description" required><%= vehicle && vehicle.inv_description ? vehicle.inv_description : '' %></textarea>

    <!-- Image -->
    <label for="inv_image">Image Path</label>
    <input
      type="text"
      id="inv_image"
      name="inv_image"
      required
      value="<%= vehicle && vehicle.inv_image ? vehicle.inv_image : '/images/vehicles/no-image.png' %>"
    />

    <!-- Thumbnail -->
    <label for="inv_thumbnail">Thumbnail Path</label>
    <input
      type="text"
      id="inv_thumbnail"
      name="inv_thumbnail"
      required
      value="<%= vehicle && vehicle.inv_thumbnail ? vehicle.inv_thumbnail : '/images/vehicles/no-image-tn.png' %>"
    />

    <!-- Price -->
    <label for="inv_price">Price</label>
    <input
      type="number"
      step="0.01"
      id="inv_price"
      name="inv_price"
      required
      value="<%= vehicle && vehicle.inv_price ? vehicle.inv_price : '' %>"
    />

    <!-- Year -->
    <label for="inv_year">Year</label>
    <input
      type="number"
      id="inv_year"
      name="inv_year"
      required
      value="<%= vehicle && vehicle.inv_year ? vehicle.inv_year : '' %>"
    />

    <!-- Miles -->
    <label for="inv_miles">Miles</label>
    <input
      type="number"
      id="inv_miles"
      name="inv_miles"
      required
      value="<%= vehicle && vehicle.inv_miles ? vehicle.inv_miles : '' %>"
    />

    <!-- Color -->
    <label for="inv_color">Color</label>
    <input
      type="text"
      id="inv_color"
      name="inv_color"
      required
      value="<%= vehicle && vehicle.inv_color ? vehicle.inv_color : '' %>"
    />

    <!-- Hidden inventory ID -->
    <input type="hidden" name="inv_id" value="<%= vehicle && vehicle.inv_id ? vehicle.inv_id : '' %>">

    <button type="submit">Update Vehicle</button>
  </form>
</main>
